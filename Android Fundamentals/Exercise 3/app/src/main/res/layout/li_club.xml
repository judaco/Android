<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/li_club_img"
        android:layout_width="@dimen/li_club_img_size"
        android:layout_height="@dimen/li_club_img_size"
        android:layout_alignParentStart="true"
        android:layout_margin="@dimen/li_club_img_margin"
        android:scaleType="centerCrop"
        android:transitionName="@string/transition_name_club_img"
        tools:src="@drawable/atletico_madrid"/>

    <TextView
        android:id="@+id/li_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/li_club_img"
        android:layout_centerVertical="true"
        android:padding="16dp"
        android:textSize="12sp"
        tools:text="Club AtlÃ©tico de Madrid"/>

    <ImageView
        android:id="@+id/li_trophy_img"
        android:layout_width="@dimen/li_trophy_image_size"
        android:layout_height="@dimen/li_trophy_image_size"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="16dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cl_trophy"/>

</RelativeLayout>