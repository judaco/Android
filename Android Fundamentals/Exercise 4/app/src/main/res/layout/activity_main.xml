<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.juda.asyncthreads.activities.MainActivity">

    <Button
        android:id="@+id/asnyctask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_asynctask"
        android:layout_weight="1"
        android:onClick="btnAsync"/>

    <Button
        android:id="@+id/threads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_threads"
        android:layout_weight="1"
        android:onClick="btnThread"/>

</LinearLayout>
